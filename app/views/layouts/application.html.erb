<!DOCTYPE html>
<html>
  <head>
    <title>Railsgame</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	   <% flash.each do |key, value| %>
                          <div class="alert alert-<%= key %>">
                                  <%= value %>
                          </div>
                  <% end %>

          <nav class="navbar navbar-inverse">
		  <div class="container">
			  <div class="navbar-header">
				  <%= link_to 'RailsGame', root_path, class: 'navbar-brand' %>
			  </div>
			  <div id="navbar">
				  <ul class="nav navbar-nav">
                                    <li><%= link_to 'Tournaments', tournaments_path %></li>
				  </ul>

				  <% if user_signed_in? && current_user.isSuper %>
				  <ul class="nav navbar-nav">
					  <li><%= link_to 'Games Library', games_path %><li>
				  </ul>
			          <% else %>
              			  <% end %>

				  <ul class="nav navbar-nav pull-right">
					  <li class="dropdown">
						  <% if user_signed_in? %>

							  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
								  <%= current_user.name %>
								  <span class="caret"></span>
							  </a>
							  <ul class="dropdown-menu" role="menu">
								  <li><%= link_to 'Profile', edit_user_registration_path %></li>
                  <% if !current_user.isSuper && user_signed_in? %>
                    <li><%= link_to 'Your Tournaments', user_tournaments_path(current_user) %></li>
                    <li><%= link_to 'Your Games', user_games_path(current_user) %></li>
                  <% end %>
								  <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
							  </ul>
						   </li>
					   <% else %>
						   <li><%= link_to 'Log In', new_user_session_path %></li>
						   <li><%= link_to 'Sign Up', new_user_registration_path %></li>
					   <% end %>


				  </ul>
			  </div>
		  </div>
	  </nav>
	  <%= yield :top_content %>

	  <div class="container">
		  <h1><%= yield :header %></h1>
		  <%= yield %>
	  </div>
  </body>
</html>
