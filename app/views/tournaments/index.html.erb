<h1 id="titre">Tournaments</h1>

<table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Date</th>
      <th>Games</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody id="tournaments">
    <% @tournaments.each do |tournament| %>
      <%= render "tournament", :tournament => tournament %>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if current_user.has_role? :admin %>
    <%= link_to 'New Tournament', new_tournament_path, :remote => true, :id => "new_tournament_link" %><br>
    <%= render partial: 'form' %>
  <% end %>
<% end %>
