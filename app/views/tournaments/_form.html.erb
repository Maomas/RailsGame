<%= form_for @tournament, :remote => true, html: {id: "new_tournament_form"} do |f|  %>
<ul>
  <% @tournament.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :date %><br />
    <%= f.datetime_select :date, autofocus: true, autocomplete: "date", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
  <% end %>
